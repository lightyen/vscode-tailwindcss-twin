{
  "name": "tailwindcss-intellisense-twin",
  "displayName": "Tailwind Twin IntelliSense",
  "description": "Tailwind VSCode Extension for twin.macro",
  "version": "0.4.2",
  "author": "lightyen",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lightyen/vscode-tailwindcss-twin.git"
  },
  "publisher": "lightyen",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "tailwind",
    "tailwindcss",
    "autocomplete",
    "intellisense",
    "twin",
    "twin.macro",
    "css-in-js",
    "react",
    "babel-macro",
    "javascript",
    "typescript"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "galleryBanner": {
    "color": "#ebeff5"
  },
  "icon": "media/icon.png",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension",
  "scripts": {
    "test": "jest",
    "generate": "cross-env TS_NODE_PROJECT=./generate/tsconfig.json ts-node ./generate/index.ts",
    "doit": "yarn upgrade-interactive --latest",
    "build": "cross-env NODE_ENV=production TS_NODE_PROJECT=tsconfig.webpack.json webpack --config webpack.config.ts",
    "watch": "cross-env NODE_ENV=development TS_NODE_PROJECT=tsconfig.webpack.json webpack --config webpack.config.ts --watch",
    "vscode:prepublish": "yarn build",
    "format": "prettier --write \"**/*.{ts,json,yml}\"",
    "check-format": "prettier --check \"**/*.{ts,json,yml}\"",
    "package": "vsce package --yarn"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-webpack-plugin": "^2.4.3",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "jest": "^26.6.3",
    "js-yaml-loader": "^1.2.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "ts-paths-resolve-plugin": "^5.2.2",
    "vsce": "^1.85.0",
    "vscode-nls": "^5.0.0",
    "vscode-nls-dev": "^3.3.2",
    "webpack": "^5.20.1",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "postcss": "^8.2.4",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  },
  "contributes": {
    "configuration": {
      "title": "Tailwind Twin IntelliSense",
      "properties": {
        "tailwindcss.colorDecorators": {
          "type": [
            "boolean",
            "null"
          ],
          "default": null
        },
        "tailwindcss.links": {
          "type": [
            "boolean",
            "null"
          ],
          "default": null
        },
        "tailwindcss.preferVariantWithParentheses": {
          "type": "boolean",
          "default": false
        },
        "tailwindcss.fallbackDefaultConfig": {
          "type": "boolean",
          "default": true
        },
        "tailwindcss.validate": {
          "type": "boolean",
          "default": true
        },
        "tailwindcss.diagnostics.emptyClass": {
          "type": "boolean",
          "default": true
        },
        "tailwindcss.diagnostics.emptyGroup": {
          "type": "boolean",
          "default": true
        },
        "tailwindcss.diagnostics.conflict": {
          "type": "string",
          "enum": [
            "none",
            "loose",
            "strict"
          ],
          "default": "strict",
          "enumDescriptions": [
            "Silent when conflict",
            "Show warning when all css property were conflicted",
            "Show warning when one css property was conflicted"
          ]
        }
      }
    },
    "commands": []
  }
}
