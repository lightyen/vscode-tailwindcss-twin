{
  "name": "tailwindcss-intellisense-twin",
  "displayName": "Tailwind Twin IntelliSense",
  "markdownDescription": "Tailwind VSCode Extension for twin.macro",
  "version": "3.0.0-rc.4",
  "author": "lightyen",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lightyen/vscode-tailwindcss-twin.git"
  },
  "publisher": "lightyen",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "tailwind",
    "tailwindcss",
    "autocomplete",
    "intellisense",
    "twin",
    "twin.macro",
    "css-in-js",
    "react",
    "babel-macro",
    "javascript",
    "typescript"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "galleryBanner": {
    "color": "#191A1F",
    "theme": "dark"
  },
  "icon": "media/icon.png",
  "activationEvents": [
    "workspaceContains:**/{*.js,*.jsx,*.ts,*.tsx}"
  ],
  "main": "./dist/extension",
  "scripts": {
    "test": "jest",
    "doit": "pnpm update --interactive --latest",
    "analyze": "cross-env NODE_ENV=production webpack --config webpack.analyzer.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "watch": "cross-env NODE_ENV=development webpack --config webpack.config.js --watch",
    "vscode:prepublish": "npm run build",
    "format": "prettier --write \"**/*.{ts,json,yml}\"",
    "check-format": "prettier --check \"**/*.{ts,json,yml}\"",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@formatjs/intl": "2.3.0",
    "@swc-node/register": "1.5.1",
    "@swc/core": "1.2.205",
    "@swc/jest": "0.2.21",
    "@types/jest": "28.1.3",
    "@types/js-beautify": "1.13.3",
    "@types/node": "14.17.32",
    "@types/source-map-support": "0.5.4",
    "@types/vscode": "1.60.0",
    "@types/webpack-env": "1.17.0",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "@typescript-eslint/typescript-estree": "5.29.0",
    "@yarnpkg/pnp": "4.0.0-rc.10",
    "autoprefixer": "10.4.7",
    "chokidar": "3.5.3",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "culori": "2.0.3",
    "esbuild": "0.14.47",
    "eslint": "8.18.0",
    "eslint-webpack-plugin": "3.2.0",
    "fork-ts-checker-webpack-plugin": "7.2.11",
    "fsevents": "2.3.2",
    "fuse.js": "6.6.2",
    "jest": "28.1.1",
    "js-beautify": "1.14.4",
    "js-yaml-loader": "1.2.2",
    "node-loader": "2.0.0",
    "postcss": "8.4.14",
    "postcss-selector-parser": "6.0.10",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "swc-loader": "0.2.3",
    "tailwind-types": "3.1.11",
    "tailwindcss": "3.1.4",
    "terser-webpack-plugin": "5.3.3",
    "ts-paths-resolve-plugin": "5.6.0",
    "typescript": "4.7.4",
    "typescript-paths": "1.3.1",
    "vsce": "2.9.2",
    "vscode-css-languageservice": "6.0.1",
    "vscode-languageclient": "8.0.1",
    "vscode-languageserver": "8.0.1",
    "vscode-languageserver-textdocument": "1.0.5",
    "vscode-languageserver-types": "3.17.1",
    "vscode-uri": "3.0.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-merge": "5.8.0",
    "webpack-visualizer-plugin2": "1.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "twin",
        "extensions": [
          ".twin"
        ],
        "aliases": [
          "twin.macro"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twin",
        "scopeName": "source.twin",
        "path": "./syntaxes/twin.json"
      },
      {
        "injectTo": [
          "source.twin"
        ],
        "scopeName": "source.css.scss.tw",
        "path": "./syntaxes/scss.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.tsx",
          "source.js.jsx",
          "source.ts",
          "source.js"
        ],
        "scopeName": "source.template.twin",
        "path": "./syntaxes/injection.json"
      },
      {
        "injectTo": [
          "source.tsx",
          "source.js.jsx"
        ],
        "scopeName": "source.tag.tw.twin",
        "path": "./syntaxes/injectionTag.json"
      },
      {
        "injectTo": [
          "source.tsx",
          "source.js.jsx"
        ],
        "scopeName": "source.tag.cs.twin",
        "path": "./syntaxes/injectionCs.json"
      }
    ],
    "configuration": {
      "title": "Tailwind Twin IntelliSense",
      "properties": {
        "tailwindcss.colorDecorators": {
          "markdownDescription": "%ext.settings.colorDecorators%",
          "additionalItems": false,
          "type": "string",
          "enum": [
            "on",
            "off",
            "inherit"
          ],
          "default": "inherit"
        },
        "tailwindcss.references": {
          "markdownDescription": "%ext.settings.references%",
          "type": "boolean",
          "default": true
        },
        "tailwindcss.diagnostics": {
          "markdownDescription": "%ext.settings.diagnostics%",
          "type": "object",
          "properties": {
            "enabled": {
              "markdownDescription": "%ext.settings.diagnostics.enabled%",
              "type": "boolean",
              "default": true
            },
            "emptyChecking": {
              "type": "boolean",
              "default": true
            }
          },
          "default": {
            "enabled": true,
            "emptyChecking": true
          }
        },
        "tailwindcss.preferVariantWithParentheses": {
          "type": "boolean",
          "default": false
        },
        "tailwindcss.fallbackDefaultConfig": {
          "type": "boolean",
          "default": true
        },
        "tailwindcss.enabled": {
          "markdownDescription": "%ext.settings.enabled%",
          "type": "boolean",
          "default": true
        },
        "tailwindcss.jsxPropImportChecking": {
          "markdownDescription": "%ext.settings.jsxPropImportChecking%",
          "type": "boolean",
          "default": true
        },
        "tailwindcss.rootFontSize": {
          "type": "number",
          "default": 16
        },
        "tailwindcss.otherLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tailwindcss.hoverColorHint": {
          "type": "string",
          "enum": [
            "none",
            "hex",
            "rgb",
            "hsl"
          ],
          "default": "none"
        },
        "tailwindcss.minimumContrastRatio": {
          "type": "number"
        },
        "tailwindcss.logLevel": {
          "type": "string",
          "description": "%ext.settings.logging.level%",
          "enum": [
            "none",
            "error",
            "warning",
            "info",
            "debug",
            "trace"
          ],
          "default": "info"
        },
        "tailwindcss.documentColors": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "commands": [
      {
        "command": "twin.preview",
        "title": "Twin: Preview"
      }
    ]
  }
}
